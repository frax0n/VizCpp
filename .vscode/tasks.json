{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-L", "lib/",
                "-framework", "CoreVideo",
                "-framework", "IOKit",
                "-framework", "Cocoa",
                "-framework", "GLUT",
                "-framework", "OpenGL",
                "lib/libraylib.a",
                "-o", "${workspaceFolder}/a.out",
                "-std=c++11",
                "src/*.cpp",
                "-I", "include"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile the project using Clang++ with the correct frameworks and libraries"
        }
    ]
}
